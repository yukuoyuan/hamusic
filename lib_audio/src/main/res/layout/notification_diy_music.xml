<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp">

    <ImageView
        android:id="@+id/iv_notification_diy_music_banner"
        android:layout_width="112dp"
        android:layout_height="112dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tv_notification_diy_music_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/iv_notification_diy_music_banner"
        android:textColor="#333333"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:text="四块五" />

    <TextView
        android:id="@+id/tv_notification_diy_music_author_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_notification_diy_music_title"
        android:layout_alignStart="@id/tv_notification_diy_music_title"
        android:layout_marginTop="5dp"
        android:textColor="#999999"
        android:textSize="12sp"
        tools:text="隔壁老王" />

    <View
        android:id="@+id/v_notification_diy_music_center_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/tv_notification_diy_music_author_name"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/iv_notification_diy_music_banner"
        android:background="#dddddd" />

    <ImageView
        android:id="@+id/iv_notification_diy_music_is_favourite"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@id/v_notification_diy_music_center_line"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@id/iv_notification_diy_music_banner"
        android:src="@drawable/icon_un_favourite" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/v_notification_diy_music_center_line"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@id/tv_notification_diy_music_is_show_lyrics"
        android:layout_toEndOf="@id/iv_notification_diy_music_is_favourite"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_notification_diy_music_previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:src="@drawable/icon_notification_previous" />

        <ImageView
            android:id="@+id/iv_notification_diy_music_play_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:src="@drawable/icon_diy_view_bottom_music_view_play" />

        <ImageView
            android:id="@+id/iv_notification_diy_music_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/icon_notification_next" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_notification_diy_music_is_show_lyrics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/v_notification_diy_music_center_line"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="15dp"
        android:gravity="center"
        android:text="词"
        android:textColor="#666666"
        android:textSize="18sp" />
</RelativeLayout>